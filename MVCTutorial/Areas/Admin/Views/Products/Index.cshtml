@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@model List<Model.Product>

<div class="card mb-4">
    <div class="card-header"><i class="fas fa-table mr-1"></i>Danh sách sản phẩm</div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                <tr>
                    <th>Name</th>
                    <th>Type</th>
                    <th>Price</th>
                    <th>Color</th>
                    <th>Status</th>
                    <th>Function</th>
                </tr>
                </thead>
                <tfoot>
                <tr>
                    <th>Name</th>
                    <th>Type</th>
                    <th>Price</th>
                    <th>Color</th>
                    <th>Status</th>
                    <th>Function</th>
                </tr>
                </tfoot>
                <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.Type</td>
                        <td>@item.Price</td>
                        <td>@item.Color</td>
                        <td>@item.Status</td>
                        <td>

                        </td>
                    </tr>
                }

                </tbody>
            </table>
        </div>
    </div>
</div>
